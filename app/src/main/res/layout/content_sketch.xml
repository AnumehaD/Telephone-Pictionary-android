<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/content_sketch"
    android:layout_alignParentTop="true">
    <!--app:layout_behavior="@string/appbar_scrolling_view_behavior"-->
    <!--tools:context="com.helluva.telephone_pictionary_android.MainActivity"-->
    <!--tools:showIn="@layout/activity_sketch">-->

    <com.agsw.FabricView.FabricView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:id="@+id/faricView"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true" />

    <!--<Button-->
        <!--android:text="Red"-->
        <!--android:layout_width="59dp"-->
        <!--android:layout_height="38dp"-->
        <!--android:layout_gravity="bottom|right"-->
        <!--android:id="@+id/red_button" />-->


    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/description_text_view"
        android:textSize="20sp"
        android:textColor="#000000"
        android:paddingBottom="5dp"
        android:paddingTop="5dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp" />

    <com.agsw.FabricView.FabricView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/fabricView"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/description_text_view" />

    <Button
        android:text="Next"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/next_button_sketch"
        android:layout_marginRight="0dp"
        android:layout_marginLeft="230dp"
        android:layout_marginEnd="10dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="7dp" />

    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:id="@+id/color_spinner"
        android:layout_marginStart="24dp"
        android:layout_gravity="bottom|left"
        android:spinnerMode="dropdown"
        android:drawSelectorOnTop="true"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true" />


</RelativeLayout>



