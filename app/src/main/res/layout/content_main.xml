<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.helluva.telephone_pictionary_android.MainActivity"
    tools:showIn="@layout/activity_main">

    <Button
        android:text="Join Game"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/host_game_button"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:id="@+id/join_game_button"
        android:textStyle="bold" />

    <Button
        android:text="Host Game"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="51dp"
        android:id="@+id/host_game_button"
        android:textStyle="bold"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/join_game_button" />

    <Button
        android:text="Sketch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/sketch_button"
        android:layout_below="@+id/text_description_button"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="33dp" />

    <Button
        android:text="Text Description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/text_description_button"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:text="Start Game"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/start_game_button"
        android:layout_marginTop="40dp"
        android:layout_below="@+id/sketch_button"
        android:layout_centerHorizontal="true" />
</RelativeLayout>
